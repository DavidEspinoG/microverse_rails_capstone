<div class="header">
  <%= link_to categories_path, class: 'nav-link' do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h2>Operations</h2>
  <i class="fa-solid fa-magnifying-glass"></i>
</div>
<div class="gray-background">
  <div class="transactions-container">
  <% @operations.each do |operation|%>
    <div class="transaction-container">
      <div class="transaction-data">
        <p>Item name: <%= operation.name %></p>
      </div>
      <hr class="line">
      <div class="transaction-data">
        <p>Item price: <%= number_to_currency(operation.amount) %></p>
      </div>
    </div>
  <% end %>
  </div>
</div>
<div class="green-button-container">
  <%= link_to 'Add new transaction',  new_category_operation_path, class: 'green-button' %>
</div>