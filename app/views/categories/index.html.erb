<div class="header">
  <i class="fa-solid fa-bars"></i>  
  <h2 class="header-title">Categories</h1>
  <i class="fa-solid fa-magnifying-glass"></i>
</div>
<div class="gray-background">
  <div class="categories-container">
    <% @categories.each do |category| %>
      <%= link_to category_operations_path(category), class: 'no-text-decoration' do %>
        <div class="category-container">
          <div class="category-container-left">
            <% if category.icon %>
              <%= image_tag "#{category.icon}.png" %>
            <% end %>
          </div>
          <div class="category-container-right">
            <div class="category-container-data">
              <div class="d-flex flex-direction-column justify-content-center">
                <p class="category-container-text"><%= category.name %></p>
              </div>
              <div>
                <p class="no-text-decoration">
                Total: 
                </p>
                <p class="category-container-text"><%= number_to_currency(calculate_total(category))  %><p>
              </div>

            </div>
            <hr class="line">
            <p class="category-container-text"><%= category.created_at.to_s[0...10] %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="green-button-container">
  <%= link_to 'Add new category', new_category_path, class: 'green-button' %>
</div>
